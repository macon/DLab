<UserControl x:Class="DLab.Views.ClipboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:behaviours="clr-namespace:DLab.Behaviours"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             behaviours:FocusBehavior.FocusFirst="true">
    <DockPanel>
        <DockPanel.Resources>
            <ControlTemplate x:Key="BlankButton" TargetType="{x:Type Button}" />

            <DataTemplate x:Key="ClipboardItemTemplate">
                <Label cal:Bind.Model="{Binding}" Name="DisplayText" ToolTip="{Binding Text}"></Label>
            </DataTemplate>

            <Style TargetType="{x:Type ListBoxItem}">
                <Style.Triggers>
                    <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                        <Setter Property="Background" Value="#19f39611"></Setter>
                    </Trigger>
                    <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                        <Setter Property="Background" Value="White"></Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </DockPanel.Resources>

		<StackPanel DockPanel.Dock="Bottom" behaviours:AccessKeyScoper.IsAccessKeyScope="True">
			<TextBox Name="SearchText" Height="20" HorizontalAlignment="Stretch"></TextBox>
			<Button Name="Search" Height="20" Content="Search" IsDefault="True" Template="{StaticResource BlankButton}"/>
		</StackPanel>

		<StackPanel behaviours:AccessKeyScoper.IsAccessKeyScope="True">
			<Button Name="Paste" DockPanel.Dock="Bottom" Height="20" Content="Paste" IsDefault="True" Template="{StaticResource BlankButton}"/>
			<ListBox Name="ClipboardItems" 
					 TabIndex="0" 
					 ItemTemplate="{StaticResource ClipboardItemTemplate}" 
					 AlternationCount="2"/>
		</StackPanel>
    </DockPanel>
</UserControl>
