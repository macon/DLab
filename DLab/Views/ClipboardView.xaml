<UserControl x:Class="DLab.Views.ClipboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:behaviours="clr-namespace:DLab.Behaviours"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             behaviours:FocusBehavior.FocusFirst="true">
    <DockPanel>
        <DockPanel.Resources>
            <ControlTemplate x:Key="blankButton" TargetType="{x:Type Button}" />
        </DockPanel.Resources>

        <TextBox Name="SearchText" DockPanel.Dock="Bottom" Height="20" HorizontalAlignment="Stretch"></TextBox>
        <Button Name="Paste" DockPanel.Dock="Bottom" Height="20" Content="Paste" IsDefault="True" Template="{StaticResource blankButton}"/>
        <ListBox Name="ClipboardItems" TabIndex="0"/>
    </DockPanel>
</UserControl>
