            <!--~1~                    <TextBlock poc:Attached.FormattedText="{Binding DisplayText}" />@1@-->
            <!--                    <TextBlock poc:Attached.FormattedText="{Binding DisplayText}" />-->
            <!--                </DataTemplate>-->
            <!--            </ListBox.ItemTemplate>-->
        </ListBox>
    </DockPanel>
</UserControl>

    